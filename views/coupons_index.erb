<h1>Coupons!</h1>

<a href='/coupons/create'>Create Coupon</a><br><br>

<table>
  <thead>
    <th>
      ID
    </th>
    <th>
      Title
    </th>
    <th>
      Description
    </th>
    <th>
      Product
    </th>
    <th>
      Discount
    </th>
    <th>
      Expiration
    </th>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td>
          <%= coupon.id %>
        </td>
        <td>
          <%= coupon.title %>
        </td>
        <td>
          <%= coupon.description %>
        </td>
        <td>
          <%= coupon.product %>
        </td>
        <td>
          <%= coupon.discount %>
        </td>
        <td>
          <%= coupon.exp_date %>
        </td>
        <td>
          <a href='/coupons/edit/<%= coupon.id %>'>Edit</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
