<head>
<link rel="stylesheet" href="/style/skeleton.css" media="screen" title="no title" charset="utf-8">
<link rel="stylesheet" href="/style/main.css" media="screen" title="no title" charset="utf-8">
<link rel="stylesheet" href="/style/normalize.css" media="screen" title="no title" charset="utf-8">
</head>
<body>

<div class="six columns content-wrapper">

<h4>Coupon List</h4>
<a href='/coupons/create'>Create Coupon</a><br><br>
<a href='/login'>Login</a><br><br>
<table>
  <thead>
    <th>
      ID
    </th>
    <th>
      Title
    </th>
    <th>
      Description
    </th>
    <th>
      Product
    </th>
    <th>
      Discount
    </th>
    <th>
      Expiration
    </th>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td>
          <%= coupon.id %>
        </td>
        <td>
          <%= coupon.title %>
        </td>
        <td>
          <%= coupon.description %>
        </td>
        <td>
          <%= coupon.product %>
        </td>
        <td>
          <%= coupon.discount %>
        </td>
        <td>
          <%= coupon.exp_date %>
        </td>
        <td>
          <a href='/coupons/edit/<%= coupon.id %>'>Edit</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</body>
